<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">
<sqlMap namespace="demo">
    <select id="getDemoPOS" parameterClass="com.ttp.webdemo.moduleone.pojo.po.DemoPO"
            resultClass="com.ttp.webdemo.moduleone.pojo.po.DemoPO">
        select
        demo_id AS id,
        demo_name AS name
        from t_demo
        <dynamic prepend="where">
            <isNotEmpty property="id" prepend="and">
                demo_id = #id#
            </isNotEmpty>
            <isNotEmpty property="name" prepend="and">
                demo_name = #name#
            </isNotEmpty>
        </dynamic>
    </select>

    <insert id="addDemoPO" parameterClass="com.ttp.webdemo.moduleone.pojo.po.DemoPO">
        insert into t_demo (demo_id,demo_name) values (#id#,#name#)
    </insert>

    <update id="updateDemoPO" parameterClass="com.ttp.webdemo.moduleone.pojo.po.DemoPO">
        update t_demo
        <dynamic prepend="set">
            <isNotNull prepend="," property="name">
                demo_name=#name#
            </isNotNull>
        </dynamic>
        where demo_id = #id#
    </update>
</sqlMap>